{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
