{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
