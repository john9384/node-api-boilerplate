{
	"name": "node-api-ts-typeorm-boilerplate",
	"version": "1.0.0",
	"main": "src/bin/www/server.ts",
	"repository": "https://github.com/john9384/node-api-ts-typeorm-boilerplate.git",
	"author": "John Damilola Ogungbure <jogungbure@gmail.com>",
	"license": "MIT",
	"scripts": {
		"prestart": "yarn lint",
		"start": "yarn build && yarn serve",
		"serve": "node -r dotenv/config build/bin/www/server.js ",
		"build": "yarn clean && yarn build-ts",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
		"watch-node": "NODE_ENV=development nodemon -r dotenv/config build/bin/www/server.js",
		"clean": "rimraf ./build",
		"build-ts": "tsc",
		"watch-ts": "tsc -w",
		"upgrade": "yarn update -D && npm update",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"typeorm": "typeorm-ts-node-esm",
		"show-migration": "typeorm-ts-node-esm -d src/db/data-source.ts migration:show",
		"run-migration": "typeorm-ts-node-esm -d src/db/data-source.ts migration:run",
		"revert-migration": "typeorm-ts-node-esm -d src/db/data-source.ts migration:revert",
		"list-routes": "ts-node src/scripts/route-list.ts"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/connect-mongodb-session": "^2.4.4",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/morgan": "^1.9.3",
		"bcrypt": "^5.0.1",
		"connect-mongodb-session": "^3.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-list-endpoints": "^6.0.0",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"mysql2": "^2.3.3",
		"pg": "^8.7.3",
		"redis": "^4.2.0",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^10.7.0",
		"typeorm": "^0.3.5",
		"typescript": "^4.6.3",
		"winston": "^3.7.2"
	},
	"devDependencies": {
		"@types/express-list-endpoints": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"concurrently": "^7.3.0",
		"eslint": "^8.13.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^7.0.4"
	}
}
